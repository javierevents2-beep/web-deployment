rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: cada usuario solo puede leer/escribir sus propios datos
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Planner data: income, expenses, goals
      match /planner_income/{incomeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /planner_expenses/{expenseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /planner_goals/{goalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Products: lectura pública, escritura solo admin
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Packages: lectura pública, escritura solo admin
    match /packages/{packageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Coupons: lectura pública, escritura solo admin
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Settings: lectura pública, escritura solo admin
    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Feature flags: lectura pública, sin escritura
    match /config/featureFlags {
      allow read: if true;
      allow write: if false;
    }

    // Contracts: creación abierta, lectura pública, actualización/borrado solo admin
    match /contracts/{contractId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Contacts: creación abierta para leads/seguimiento, lectura pública, actualización/borrado solo admin
    match /contacts/{contactId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Calendar events (calendar-only items): creaci��n abierta, lectura pública, actualización/borrado solo admin
    match /calendar_events/{eventId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Orders: creación abierta, lectura/actualización/borrado solo admin
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Calendar bookings: creación abierta, lectura/actualización/borrado solo admin
    match /calendar_bookings/{bookingId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // MP webhooks: creación abierta, lectura/actualización/borrado solo admin
    match /mp_webhooks/{webhookId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Investments: escritura solo admin
    match /investments/{investmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Investment installments: escritura solo admin
    match /investment_installments/{installmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Event photos: lectura pública, escritura solo admin
    match /event_photos/{photoId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Photo sharing sessions: lectura pública, escritura admin
    match /photo-sharing/{sharingId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Photo sharing links: lectura pública, escritura admin
    match /photo-sharing-links/{linkId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Photo libraries: lectura pública, escritura admin
    match /photo-libraries/{libraryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Budget envelopes: lectura/escritura solo admin
    match /budget_envelopes/{envelopeId} {
      allow read, write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Budget transactions: lectura/escritura solo admin
    match /budget_transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Bloqueo por defecto para todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
